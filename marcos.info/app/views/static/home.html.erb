<% if @post.present? %>
<h2> Featured post</h2>
<hr />
<h3> <%= link_to @post.title, post_path(@post) %></h3>
<p><em><%= @post.author %></em></p>

<p><%= simple_format ( truncate(@post.body, length: 150, separator: ' ', omission: "...#{ link_to 'Continue Reading>', post_path(@post) }") ) %></p>

<%= @post.inspect %>

<% end  %>